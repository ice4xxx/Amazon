<pages:BaseHelperPage x:Class="Amazon.Pages.Helper.StorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Amazon.Pages.Helper"
      xmlns:productList="clr-namespace:Amazon.Controls.ItemsLists.ProductList"
      xmlns:pages="clr-namespace:Amazon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StorePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBox Style="{StaticResource ItemTextBoxStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Магазин"></TextBox>

        <productList:ProductStoreListControl Grid.Row="1"/>
    </Grid>
</pages:BaseHelperPage>
